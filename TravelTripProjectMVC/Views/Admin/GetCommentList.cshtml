@using TravelTripProjectMVC.Models.Classes
@model List<Comment>
@{
    ViewBag.Title = "GetCommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>YorumId</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum İçeriği</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.User_Name</td>
            <td>@item.Mail</td>
            <td>@item.UserComment</td>
            <td>@item.Blog.Title</td>
            <td><a href="/Admin/CommentDelete/@item.Id" class="btn btn-danger"> Sil</a></td>
            <td><a href="/Admin/GetComment/@item.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }

</table>

